{
  "manifest_version": 3,
  "name": "SourceTool",
  "version": "0.1.0",
  "description": "AI-native product sourcing for Amazon FBA, Walmart & eBay resellers",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.de/*",
    "*://*.walmart.com/*",
    "*://*.ebay.com/*",
    "*://*.ebay.co.uk/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "sourcetool@sourcetool.io",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/dp/*",
        "*://*.amazon.com/*/dp/*",
        "*://*.amazon.com/gp/product/*",
        "*://*.amazon.ca/dp/*",
        "*://*.amazon.ca/*/dp/*",
        "*://*.amazon.co.uk/dp/*",
        "*://*.amazon.co.uk/*/dp/*",
        "*://*.amazon.de/dp/*",
        "*://*.amazon.de/*/dp/*",
        "*://*.walmart.com/ip/*",
        "*://*.ebay.com/itm/*",
        "*://*.ebay.co.uk/itm/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SourceTool"
  },
  "options_ui": {
    "page": "options.html"
  }
}
